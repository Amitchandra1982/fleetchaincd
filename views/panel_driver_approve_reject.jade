			br
			legend 
				input(type="text" name="driverdetailsstatus" placeholder="Status")
				span.hint &nbsp;&nbsp;Status
			
			
			br
			
		button(type="button" name="arbutton" value="approve")#approvedriver
				span.fa.fa-check &nbsp;&nbsp;
