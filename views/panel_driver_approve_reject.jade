#driverapproverejectPanel(hidden).panel
	h1 Please check the requested driver details
	hr
	
	#innerWrap
		
		
		form(action="/approverejectdriver" method="POST")#driverdetailsform
			legend 
				input(type="text" name="driverdetailsfirstname" placeholder="First Name" readonly)
				span.hint &nbsp;&nbsp;First Name
			
			br
			legend 
				input(type="text" name="driverdetailslastname" placeholder="Last Name" readonly)
				span.hint &nbsp;&nbsp;Last Name
			
			br
			legend 
				input(type="text" name="driverdetailsemail" placeholder="Email" readonly)
				span.hint &nbsp;&nbsp;Email
				
				
			br
			legend 
				input(type="text" name="driverdetailsmobilenumber" placeholder="mobile number" readonly)
				span.hint &nbsp;&nbsp;Mobile Number
			
			
			br
			legend 
				input(type="text" name="driverdetailspassword" placeholder="Password" readonly)
				span.hint &nbsp;&nbsp;Password
			
			br
			legend 
				input(type="text" name="driverdetailsstreet" placeholder="Street Address" readonly)
				span.hint &nbsp;&nbsp;Street
			
			br
			legend 
				input(type="text" name="driverdetailscity" placeholder="City" readonly)
				span.hint &nbsp;&nbsp;City
				
				br
			legend 
				input(type="text" name="driverdetailsstate" placeholder="State" readonly)
				span.hint &nbsp;&nbsp;State
			
			br
			legend 
				input(type="text" name="driverdetailszip" placeholder="Zip" readonly)
				span.hint &nbsp;&nbsp;Zip
			
			
			br
			
			button(type="button" name="arbutton" value="approve")#approvedriver
				span.fa.fa-check &nbsp;&nbsp;
				span Approve Driver 
				
			button(type="button" name="arbutton" value="reject")#rejectdriver
				span.fa.fa-check &nbsp;&nbsp;
				span Reject Driver 	
				
				